<span class="k">import</span> <span class="p">{</span> <span class="nx">BulkDeleteButton</span><span class="p">,</span> <span class="nx">BulkExportButton</span> <span class="p">}</span> <span class="k">from</span> <span class="dl">'</span><span class="s1">react-admin</span><span class="dl">'</span><span class="p">;</span>

