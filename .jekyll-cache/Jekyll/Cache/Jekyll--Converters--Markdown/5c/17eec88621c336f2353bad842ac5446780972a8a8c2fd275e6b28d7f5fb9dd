+import { Switch, Route } from 'react-router-dom';
+import withContext from 'recompose/withContext'; // You should add recompose/withContext to your dependencies
</span><span class="gd">-import { Admin, Resource } from 'react-admin';
</span><span class="gi">+import { AuthContext, DataProviderContext, TranslationProvider, Resource, Notification } from 'react-admin';
</span><span class="p">import restProvider from 'ra-data-simple-rest';
